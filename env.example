# =============================================================================
# Player Risk Service - Environment Variables Template
# =============================================================================

# Database Configuration
POSTGRES_DB=player_risk_db
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://your_db_username:your_secure_password_here@localhost:5434/player_risk_db

# API Keys
NEWSAPI_KEY=your_newsapi_key_here
GROK_API_KEY=your_grokapi_key_here

# BigQuery Configuration
BIGQUERY_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json  # Optional if using gcloud auth

# BigQuery Tables - Source (projections)
BIGQUERY_SOURCE_DATASET=your_dataset
BIGQUERY_SOURCE_TABLE=player_projections

# BigQuery Tables - Destination (enriched with alerts)
BIGQUERY_DEST_DATASET=your_dataset
BIGQUERY_DEST_TABLE=projections_with_alerts_dev